<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.jame.ontechroom">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.BookingCompleteActivity"></activity>
        <activity android:name=".Activities.DoBookingActivity" />
        <activity android:name=".Activities.RoomBookingSearchActivity" />
        <activity android:name=".Activities.NewBookingActivity" />
        <activity android:name=".Activities.CurrentBookingsActivity" />
        <activity android:name=".Activities.JoinOrNewActivity" />
        <activity android:name=".Activities.RoomViewActivity" />
        <activity android:name=".Activities.ViewBookingsActivity" />
        <activity android:name=".Activities.BookingActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>